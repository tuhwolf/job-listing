<div class="pull-right " style="margin: 20px 0;">
  <%= link_to("Add a new job", new_admin_job_path, class: "btn btn-primary")%>
</div>

<br /><br />

<table class="table table-boldered table-striped custab" >
  <thead>
    <tr>
      <td>
          <i class="fa fa-globe" aria-hidden="true"></i>Job
      </td>
      <td>
          <i class="fa fa-envelope" aria-hidden="true"></i>Resumes received
      </td>
      <td>
          <i class="fa fa-money" aria-hidden="true"></i>Salary
      </td>

      <td>
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Manage items
      </td>
      <td>
          <i class="fa fa-clock-o" aria-hidden="true"></i>Last update
      </td>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job|%>
    <tr>
      <td>
        <!-- <% if job.is_hidden %>
        (Hidden)
        <% else %>
        (Public)
        <% end %> -->
        <%= render_job_status(job) %>

        <%= link_to(job.title, admin_job_path(job))%>
      </td>
      <td>
        <%= link_to(job.resumes.count, admin_job_resumes_path(job))%>
      </td>
      <td>
        <%= job.wage_lower_bound%> ~ <%= job.wage_upper_bound%>
      </td>

      <td>
        <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-success" do %><i class="fa fa-pencil"></i><% end %>
        <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-default btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>

        <% if job.is_hidden %>
          <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success" do %><i class="fa fa-eye"></i><% end %>
        <% else %>
          <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
        <% end %>
      </td>
      <td>
        Submitted <%= time_ago_in_words(job.created_at) %> ago
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<!-- add paginate function -->
<div class="text-center">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
